@model List<BookCategoryViewModel>


        <table class="table">
            <thead>
                <tr>
                    <th>
                        Категории
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr class="tr-row">
                        <td>
                            <input asp-for="@Model[i].CategoryId" hidden />
                            @Html.HiddenFor(x => x[i].IsRemoved, new { @class="removed-input"})
                            <input asp-for="@Model[i].Name" />
                        </td>
                        <td><a asp-action="DeleteBookCategory" asp-route-id="@Model[i].CategoryId" deleteBookCategoryLink>Удалить категорию</a></td>
                    </tr>

                }
            </tbody>
        </table>