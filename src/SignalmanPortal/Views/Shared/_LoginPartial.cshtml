@using Microsoft.AspNetCore.Identity
@using SignalmanPortal.Models

@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button id="logout-btn" type="submit" class="btn btn-link navbar-btn navbar-link" title="Выйти">
                    <img src="~/images/logout.svg" />
                </button>
            </li>
        </ul>
    </form>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a title="Зарегистрироваться" asp-area="" asp-controller="Account" asp-action="Register">
                                <img src="~/images/register.svg" />
                            </a>
                        </li>
                        <li>
                            <a title="Авторизироваться" asp-area="" asp-controller="Account" asp-action="Login">
                                <img src="~/images/login.svg" />
                            </a>
                        </li>
                    </ul>
                }
