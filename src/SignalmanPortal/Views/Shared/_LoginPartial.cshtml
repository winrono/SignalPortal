@using Microsoft.AspNetCore.Identity
@using SignalmanPortal.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @{if (User.IsInRole("Administrator"))
                {
                    <li id="adminList" title="Администрирование" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown"><img src="~/images/admin.svg" /></a>
                        <ul class="dropdown-menu dropdown-menu-left">
                            <li><a asp-controller="Admin" asp-action="News">Управление новостями</a></li>
                            <li><a asp-controller="Admin" asp-action="Books">Управление обучающими материалами</a></li>
                        </ul>
                    </li>
                }
            }
            <li>
                <button id="logout-btn" type="submit" class="btn btn-link navbar-btn navbar-link" title="Выйти">
                    <img src="~/images/logout.svg" />
                </button>
            </li>
        </ul>
    </form>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a title="Зарегистрироваться" asp-area="" asp-controller="Account" asp-action="Register">
                                <img src="~/images/register.svg" />
                            </a>
                        </li>
                        <li>
                            <a title="Авторизироваться" asp-area="" asp-controller="Account" asp-action="Login">
                                <img src="~/images/login.svg" />
                            </a>
                        </li>
                    </ul>
                }
